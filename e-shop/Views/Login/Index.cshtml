@model LoginModel

@{
	Layout = "_LayoutLogin";

    string message = this.ViewBag.Message;
}

<form asp-action="Index">
        <div style="display: flex; justify-content: center; align-items: center;">
            <a asp-action="Index" asp-controller="Home">
                <img src="~/images/img/Group 4.png"/>
            </a>
        </div>
        @if (message != null)
        {
            <div style="position:absolute; margin-top: -50px; margin-left: -10px; color: red;" class="alert alertalert-danger">@message</div>
        }
      <div class="form-group">
        <label for="exampleInputEmail1">Přihlašovací jméno</label>
        <input type="text" asp-for="Username" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Zadejte přihlašovací jméno">        
      </div>
      <div class="form-group">
        <label for="exampleInputPassword1">Heslo</label>
        <input type="password" asp-for="Password" class="form-control" id="exampleInputPassword1" placeholder="Heslo">
      </div>

      <button type="submit" class="btn btn-primary">Submit</button>

</form>