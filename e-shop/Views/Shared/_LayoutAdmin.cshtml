<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - e_shop</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/e_shop.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/shared/admin-panel.css" asp-append-version="true"/>    
    <link rel="stylesheet" href="~/css/admin/home.css" asp-append-version="true"/>    

</head>
<body>

    <div class="login-form">        
        <div style="display: flex; justify-content: center; align-items: center;">
            <a asp-action="Index" asp-controller="Home">
                <img src="~/images/img/Group 4.png"/>
            </a>
        </div>
        <div class="wrapper-admin-panel">
	        <div id="admin-panel-heading">
                        Panel pro správu
            </div>
            <nav class="admin-panel">

                <div class="item item1">
                    <a asp-controller="AdminProducts" asp-action="Index">
                        <div class="wrapper">
                            <div>
                                Produkty 
                            </div> 
                        </div> 
                    </a>
                </div>                
                <div class="item item2">
                    <a asp-controller="AdminCategories" asp-action="Index">
                        <div class="wrapper">
                            <div>
                                Kategorie
                            </div> 
                        </div>
                    </a> 
                </div>
                <div class="item item3">
                    <a asp-controller="AdminOrders" asp-action="Index">
                        <div class="wrapper">
                            <div>
                                Objednávky 
                            </div>
                        </div> 
                    </a>
                </div>    
                <div class="item item4">
                    <a asp-controller="AdminColors" asp-action="Index">
                        <div class="wrapper">
                            <div>
                                Barvy
                            </div> 
                        </div>
                    </a> 
                </div>
                <div class="item item5">
                    <a asp-controller="AdminSizes" asp-action="Index">
                        <div class="wrapper">
                            <div>
                                Velikosti
                            </div> 
                        </div>
                    </a> 
                </div>
                <div class="item item6">
                    <a asp-controller="AdminFeedback" asp-action="Index">
                        <div class="wrapper">
                            <div>
                                Zpětná vazba
                            </div> 
                        </div>
                    </a> 
                </div>
            </nav>
        </div>

        <div class="login-form-wrapper">
            @RenderBody()
        </div>

    </div>
       
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
