    bool auth = this.ViewBag.Authenticated;

    int cartCount = this.ViewBag.Cart.Count;
    bool showCart = cartCount > 0;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
