                <div>
                    <span><a href="tel:+420 777 666 555"> <span class="code">+420 </span> 777 666 555</a></span>
                    <span class="pipe">|</span>
                    <span><a href="mailto:info@nejlepsiboty.cz">info@nejlepsiboty.cz</a></span>                
                </div>
            </div>
    
            <div class="wrapper">

                @if (auth)
                {
                    <a asp-action="Index" asp-controller="AdminHome" style="margin-right: 20px">
                            <i class="fa-sharp fa-solid fa-gears"></i>
                    </a>
                }

                <div class="picture">
                    <a href=""><img src="~/images/img/profile-user.png" alt=""></a>
                </div>
                <div class="login-text">
                    @if (auth)
                    {                        
                        <a asp-action="LogOut" asp-controller="Login">Odhlásit se</a>
                        
                    }else
                    {
                        <a asp-action="Index" asp-controller="Login">Přihlásit se</a>
                    }
                </div>                
            </div>

        </div>

    </header>

     <div class="width">

        <div class="hero">
            <div>
                <a asp-controller="Home" asp-action="Index"><img src="~/images/img/Group 4.png"/></a>
            </div>
