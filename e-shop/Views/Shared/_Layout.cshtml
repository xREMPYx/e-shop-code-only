                <div class="search-input">
                    <form action="search.php">
                        <input type="text"  placeholder="Vyhledat zboží..." class="search">                                            
                    </form>                    
                </div>

                <div class="loupe">
                    <a href=""><img src="~/images/img/loupe.png" alt=""></a>
                </div>

                <div class="cart">
                    <div class="cart-count @(showCart ? "cart-count-active" : string.Empty)">
                        <span>@(showCart ? cartCount : string.Empty)</span>
                    </div>
                    <a asp-controller="Cart" asp-action="Index"><img src="~/images/img/Group 6.svg" alt=""/></a>
                </div>

                <div class="hearth">
                    <a href=""><img src="~/images/img/heart.png" alt=""></a>
