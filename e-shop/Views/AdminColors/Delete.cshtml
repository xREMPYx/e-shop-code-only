@model e_shop.Models.Color

@{
    ViewData["Title"] = "Delete";
    Layout = "_LayoutAdmin";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Color</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Barva
        </dt>
        <dd class = "col-sm-10">
            <div style="margin-left:10px; width: 20px; height:20px; background: #@Model.ColorCode.ToString("X")"></div>
